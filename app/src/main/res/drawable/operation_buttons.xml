<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorYellowOutlineDarker" />
            <gradient android:angle="-90" android:startColor="@color/colorYellowOutlineDarker"
                android:endColor="@color/colorYellowOutline"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorYellowOutlineDarker" />
            <solid android:color="@color/colorYellowOutline"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorYellowOutlineDarker" />
            <gradient android:angle="-90" android:startColor="@color/colorYellowOutline"
                android:endColor="@color/colorYellowOutlineDarker" />
        </shape>
    </item>
</selector>